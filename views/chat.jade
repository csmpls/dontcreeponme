doctype html
html
	head
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
		title Pick a pseudonym 
		link(rel="stylesheet", href="layout.css")
		link(rel="stylesheet", href="spectrum.css")
		link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css")
		script(src='//code.jquery.com/jquery-1.9.1.min.js')
		script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js")
		script(src='/jquery.timeago.js')
		script(src='//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.js')
		script(src="/drop.js")
		script(src="/spectrum.js")
		script(src="/socket.io/socket.io.js")
		script(src="/sjcl.js")
		script(src="/script.js")

	body
		audio(preload="auto")#notifySound
			source(src="notify.ogg")
			source(src="notify.wav")

		div#pickUsername
			h3 Choose a pseudonym?
			.row
				.col-md-10.col-lg-10.col-sm-10.col-xs-10.nopaddingRight
					input(type='text')#pseudoInput
				.col-md-2.col-lg-2.col-sm-2.col-xs-2.nopaddingLeft
					input(id='colorpicker')
			.row
				div.alert.alert-error#alertPseudo
					| 
				p 	You're about to enter an off-the-record chat. Only the people in the room with you at the same time will recieve your messages. Nothing will be stored permanently on our servers. You are not being tracked.
			.row
				.col-md-4.col-lg-4.col-sm-4.col-xs-4
					p	key: (optional)
				.col-md-8.col-lg-8.col-sm-8.col-xs-8
					input(type='text')#password
					p 	 	
			button.btn#pseudoSubmit Join

		div.container#main
			.row
				.col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-lg-8.col-md-offset-2.col-lg-offset-2
					#chatEntries
			.row
				.col-xs-11.col-sm-9.col-md-7.col-lg-7.nopaddingRight.col-sm-offset-1.col-md-offset-2.col-lg-offset-2
					input(type='textarea')#messageInput
				.col-md-1.col-lg-1.col-sm-1.col-xs-1.nopaddingLeft
					button#submit(data-loading-text="Send") >
			.row
				.col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-lg-8.col-md-offset-2.col-lg-offset-2
					.pull-left#userlistDiv

		div#missedMessages
